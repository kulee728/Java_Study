package com.pattern.construct.FactoryMethod.game;

import com.pattern.construct.FactoryMethod.game.probability.AttackGenerator;
import com.pattern.construct.FactoryMethod.game.probability.MovingGenerator;

public class UnitArcher extends UnitSpec implements UnitAbilities {
	
	public UnitArcher(String name, int attackDamage, int attackRange) {
		super(name,attackDamage,attackRange,10);
	}
	
	@Override
	public void attack() {
		AttackGenerator atkC = new AttackGenerator(attackDamage);
		int resultDamage = atkC.getResultDamage();
		String attackMessage = atkC.getMessage();
		System.out.println("궁수 "+name+" 활을 쏘아 공격합니다!");
		System.out.println("최대 사정거리 : "+attackRange);
		System.out.println(attackMessage+" "+resultDamage +"의 피해를 입혔습니다! (공격력 : "+attackDamage+")");
	}

	@Override
	public void move() {
		MovingGenerator mvg = new MovingGenerator(movementSpeed);
		String moveMessage = mvg.getMessage();
		
		System.out.println(moveMessage);
		
	}

	@Override
	public void specialAbility() {
		// TODO Auto-generated method stub
		
	}




}
