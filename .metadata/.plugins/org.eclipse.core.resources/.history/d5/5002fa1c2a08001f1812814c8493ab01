package com.pattern.construct.FactoryMethod.game;



public class UnitArcher implements Unit {
	
	private String name;
	private int attackDamage;
	private int attackRange;
	
	public UnitArcher(String name, int attackDamage, int attackRange) {
		this.name = name;
		this.attackDamage = attackDamage;
		this.attackRange = attackRange;
	}
	
	@Override
	public void attack() {
		
		
		int resultDamage = attackDamage;
		System.out.println("궁수 "+name+" 활을 쏘아 공격합니다!");
		System.out.println("최대 사정거리 : "+attackRange);
		System.out.println(resultDamage +"의 피해를 입혔습니다! (최대 데미지 : "+attackDamage+")");
	}

	@Override
	public void move() {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void specialAbility() {
		// TODO Auto-generated method stub
		
	}



}
